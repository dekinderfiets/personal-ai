{
    "name": "index-service",
    "version": "1.0.0",
    "description": "Multi-source data indexing service for AI agent retrieval",
    "main": "dist/main.js",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:prod": "node dist/main",
        "dev:ui": "cd ui && npm run dev",
        "dev:server": "npm run start:dev",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:ui\"",
        "test": "jest",
        "lint": "eslint 'src/**/*.ts'",
        "lint:fix": "eslint 'src/**/*.ts' --fix",
        "prepare": "cd .. && husky collector/.husky"
    },
    "lint-staged": {
        "src/**/*.ts": "eslint --fix"
    },
    "dependencies": {
        "@elastic/elasticsearch": "^8.19.1",
        "@langchain/textsplitters": "^1.0.1",
        "@nestjs/common": "^11.1.9",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.9",
        "@nestjs/platform-express": "^11.1.9",
        "@nestjs/serve-static": "^5.0.4",
        "@temporalio/activity": "^1.14.1",
        "@temporalio/client": "^1.14.1",
        "@temporalio/worker": "^1.14.1",
        "@temporalio/workflow": "^1.14.1",
        "axios": "^1.7.9",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "cohere-ai": "^7.20.0",
        "crypto-js": "^4.2.0",
        "express": "^5.2.1",
        "google-auth-library": "^10.5.0",
        "html-to-text": "^9.0.5",
        "ioredis": "^5.4.1",
        "pdf-parse": "^2.4.5",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "tiktoken": "^1.0.22"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.14",
        "@nestjs/schematics": "^11.0.9",
        "@nestjs/testing": "^11.1.13",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^5.0.6",
        "@types/html-to-text": "^9.0.4",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.19.8",
        "@types/pdf-parse": "^1.1.5",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0"
    }
}
