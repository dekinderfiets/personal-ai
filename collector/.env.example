# Environment variables for the Indexing service
# This file serves as an example. Copy to .env and fill in your actual values.

# General
NODE_ENV=development
PORT=8087
GLOBAL_API_PREFIX=api/v1

# Redis for caching and queues
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2 # Use a different DB than n8n

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_URL=http://${CHROMA_HOST}:${CHROMA_PORT}

# OpenAI API Key for embeddings
OPENAI_API_KEY=sk-your-openai-api-key

# JIRA Connector
JIRA_BASE_URL=https://your-jira-instance.atlassian.net
JIRA_EMAIL=your-jira-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECTS_TO_INDEX=PROJECT1,PROJECT2 # Comma-separated list of project keys

# SLACK Connector
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNELS_TO_INDEX=channel-id-1,channel-id-2 # Comma-separated list of channel IDs

# GMAIL Connector
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:8087/api/v1/auth/google/callback
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token # Obtain via OAuth flow
GMAIL_LABELS_TO_INDEX=INBOX,SENT # Comma-separated list of labels
GMAIL_DOMAINS_TO_INDEX=example.com,anothersample.com # Comma-separated list of domains

# GOOGLE DRIVE Connector
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:8087/api/v1/auth/google/callback
GOOGLE_DRIVE_REFRESH_TOKEN=your-google-drive-refresh-token # Obtain via OAuth flow
GOOGLE_DRIVE_FOLDERS_TO_INDEX=folder-id-1,folder-id-2 # Comma-separated list of folder IDs

# GOOGLE CALENDAR Connector
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8087/api/v1/auth/google/callback
GOOGLE_CALENDAR_REFRESH_TOKEN=your-google-calendar-refresh-token # Obtain via OAuth flow
GOOGLE_CALENDAR_IDS_TO_INDEX=primary,calendar-id-2 # Comma-separated list of calendar IDs

# CONFLUENCE Connector
CONFLUENCE_BASE_URL=https://your-confluence-instance.atlassian.net
CONFLUENCE_EMAIL=your-confluence-email@example.com
CONFLUENCE_API_TOKEN=your-confluence-api-token
CONFLUENCE_SPACES_TO_INDEX=SPACEKEY1,SPACEKEY2 # Comma-separated list of space keys
