# Environment variables for the Collector service
# Copy to .env and fill in your actual values.

# General
NODE_ENV=development
PORT=8087
GLOBAL_API_PREFIX=api/v1
COMPANY_DOMAINS=example.com,another-domain.com
# API_KEY=optional-api-key-for-auth

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2
# REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Atlassian (shared by Jira + Confluence)
ATLASSIAN_BASE_URL=https://your-instance.atlassian.net
ATLASSIAN_EMAIL=your-email@company.com
ATLASSIAN_API_TOKEN=your-atlassian-api-token
JIRA_SPRINT_FIELD_ID=customfield_10020

# Slack
SLACK_USER_TOKEN=xoxp-your-slack-user-token

# Google (shared by Gmail, Drive, Calendar)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_USER_EMAIL=your-email@gmail.com
# Temporal
TEMPORAL_ADDRESS=temporal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=collector-indexing
VITE_TEMPORAL_UI_URL=http://localhost:8088

# Cohere (for search re-ranking)
COHERE_API_KEY=your-cohere-api-key

# Code Agent Integration
CODE_AGENT_URL=http://code-agent:8085
MCP_SERVER_PATH=/opt/collector-mcp/dist/index.js
